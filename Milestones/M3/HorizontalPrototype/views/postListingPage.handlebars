<body>

    <div class="form-wrapper">
        <div class="form-postlisting">

            <h1 class="title" style="font-family:Montserrat" style="text-align:center">Post Listing</h1>

            <form action="upload.php" method="POST">
                <input type="file" multiple>
                <p>Drag your Image files here or click in this area.</p>
                <button type="submit">Upload</button>
            </form>

            <div class="Post-one">
                <label for="Address"><b>Address</b></label>
                <input type="text" placeholder="Enter Address" name="Address" required>
            </div>
            <div class="Post-two">
                <label for="City"><b>City</b></label>
                <input type="text" placeholder="Enter City" name="City" required>
            </div>
            <div class="Post-three">
                <label for="state"><b>State</b></label>
                <input type="text" placeholder="Enter State" name="state" required>
            </div>
            <div class="Post-four">
                <label for="Zipcode"><b>Zip Code</b></label>
                <input type="text" placeholder="Enter Zip Code" name="Zipcode" required>
            </div>
            <div class="Post-five">
                <label for="Bed"><b>Bed</b></label>
                <input type="text" placeholder="Enter Number of Beds" name="Bed" required>
            </div>
            <div class="Post-six">
                <label for="Bath"><b>Bath</b></label>
                <input type="text" placeholder="Enter Number of Bathrooms" name="Bath" required>
            </div>
            <div class="Post-seven">
                <label for="Price"><b>Price</b></label>
                <input type="text" placeholder="Enter Price in US dollars" name="Price" required>
            </div>
            <div class="Post-button">
                <button type="submit" class="btn">Post</button>

            </div>

        </div>
    </div>
</body>
<script>
