    .form-wrapper {
        position: relative;
        height: 170vh;
        width: 100vw;
        margin: auto;
    }

    form {
        
        
        margin-top: 12vh;
        
        width: 50vw;
        
        border: 3px dashed rgb(0, 0, 0);
    }

    form p {
        position: absolute;
        text-align: center;
        line-height: 15px;
        width: 55vw;
        color: #black;
        font-family: montserrat;
    }

    form input {
        position: absolute;
        outline: none;
        opacity: 0;
    }

    form button {
        margin: 0;
        color: #black;
        background: #white;
        width: 3200px;
        height: 35px;
        margin-top: 220px;
        margin-left: 0px;
        border-radius: 4px;
        transition: all .4s ease;
        outline: none;
    }

    form button:hover {
        background: #80B494;
        color: #black;
    }

    form button:active {
        border: 0;
    }

    .title {
        color: black;
        text-align: center;
    }

    input {
        font-family: montserrat;
        padding: .5em;
        width: 70%;
        border: 3px solid var(#444);
        border-radius: 7px;
    }

    input[required]:placeholder-shown {
        border-color: #80B494;
    }

    body {
        text-align: center;
    }

    .btn {
        border-radius: 7px;
        color: black;
        padding: 10px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    .btn {
        transition-duration: 0.4s;
    }

    .btn:hover {
        background-color: #80B494;
        color: black;
    }

    .Post-one {
        height: 30px;
        margin-top: 280px;
        margin-left: 0px;
    }
