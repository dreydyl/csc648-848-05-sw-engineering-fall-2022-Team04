<button class="profile-page-button" id="leave-review-button">Leave a Review</button>
{{log this}}
<div class="form-popup" id="myForm">
    <form class="form-container" method="post" action="/users/review" enctype="application/x-www-form-urlencoded">
        <h1 class="review-header">Leave a Review</h1>
        <input type="number" name="rating" value="Enter rating. 1-5" required>
        <input type="text" name="title" placeholder="Title">
        <textarea name="description" placeholder="Enter a review..."></textarea>
        <input type="text" name="type" style="display: none;" value="landlord"></input>
        <input type="text" name="landlordId" style="display: none;" value="{{profile.user.id}}"></input>
        <input type="submit" id="post-review-submit-button" value="POST">
    </form>
</div>
<script src="/public/js/postReview.js" type="module"></script>